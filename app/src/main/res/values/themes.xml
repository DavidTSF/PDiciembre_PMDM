<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!-- Base application theme. -->
    <style name="Base.Theme.PDiciembre_PMDM" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Gray</item>
        <item name="colorAccent">@color/GrayBlue</item>
    </style>

    <style name="inventoryItemList" >
        <item name="android:background">@color/DarkGray</item>
    </style>
    <style name="inventoryItemList.item" >
        <item name="font">@color/ClearBlue</item>
    </style>

    <style name="fragmentStyle" >
        <item name="android:background">@color/Gray</item>
    </style>


    <style name="BottomNavigation" parent="Widget.Material3.BottomNavigationView" >
        <item name="itemBackground">@drawable/drawable_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_text_color_state</item>
        <item name="itemIconTint">@drawable/bottom_nav_text_color_state</item>

        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/DarkGray</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemActiveIndicatorStyle">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

    <style name="Theme.PDiciembre_PMDM" parent="Base.Theme.PDiciembre_PMDM" />
</resources>